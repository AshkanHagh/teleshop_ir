{
  "name": "teleshop_backend",
  "module": "src/server.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "bun src/server.ts",
    "build": "bun build --compile --minify --sourcemap src/server.ts --outfile main",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bun src/modules/shared/db/drizzle/migrate.ts",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio",
    "db:seed": "bun src/modules/shared/db/seed/index.ts",
    "db:backup": "bun src/cronjobs/database/backup.ts",
    "db:restore": "bun src/cronjobs/database/restore.ts"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@types/bun": "latest",
    "@eslint/js": "^9.18.0",
    "drizzle-kit": "^0.31.4",
    "eslint-plugin-prettier": "^5.2.2",
    "prettier": "^3.4.2",
    "typescript-eslint": "^8.20.0"
  },
  "peerDependencies": {
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.5",
    "hono": "^4.6.12",
    "ioredis": "^5.4.1",
    "postgres": "^3.4.5",
    "winston": "^3.17.0",
    "zarinpal-checkout-v4": "^1.3.0",
    "zod": "^3.23.8"
  }
}
