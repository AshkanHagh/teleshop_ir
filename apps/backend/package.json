{
  "name": "teleshop_backend",
  "module": "src/server.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "inspect": "bun --inspect src/server.ts",
    "start": "bun src/server.ts",
    "binary:build": "bun build --compile --minify --sourcemap src/server.ts --outfile main",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bun src/database/migrate.ts",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio --port 9912 --verbose",
    "db:seed": "bun src/database/seed/index.ts",
    "cron": "bun src/cronjobs/servicePrice.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@faker-js/faker": "^9.0.3",
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node-cron": "^3.0.11",
    "drizzle-kit": "^0.25.0",
    "eslint": "^9.12.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1"
  },
  "dependencies": {
    "@upstash/ratelimit": "^2.0.3",
    "@upstash/redis": "^1.34.2",
    "drizzle-orm": "^0.34.1",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.6.3",
    "jsonwebtoken": "^9.0.2",
    "kuuid": "^1.0.3",
    "node-cron": "^3.0.3",
    "postgres": "^3.4.4",
    "telegram": "^2.25.15",
    "zarinpal-checkout-v4": "^1.3.0",
    "zod": "^3.23.8"
  }
}