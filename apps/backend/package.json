{
  "name": "teleshop_backend",
  "module": "src/server.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "bun src/server.ts",
    "build": "bun build --compile --minify --sourcemap src/server.ts --outfile main",
    "sentry:build": "bunx tsc && bun run sentry:sourcemaps",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bun src/modules/shared/db/drizzle/migrate.ts",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio --port 9912 --verbose",
    "db:seed": "bun src/modules/shared/db/seed/index.ts",
    "db:backup": "bun src/cronjobs/database/backup.ts",
    "db:restore": "bun src/cronjobs/database/restore.ts",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org haghdoost --project teleshop_backend ./dist && sentry-cli sourcemaps upload --org haghdoost --project teleshop_backend ./dist"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@faker-js/faker": "^9.3.0",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "drizzle-kit": "^0.26.2",
    "eslint": "^9.16.0",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-import": "^2.31.0",
    "typescript-eslint": "^8.17.0"
  },
  "peerDependencies": {
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@sentry/bun": "^8.43.0",
    "@sentry/cli": "^2.39.1",
    "drizzle-orm": "^0.35.3",
    "hono": "^4.6.12",
    "ioredis": "^5.4.1",
    "postgres": "^3.4.5",
    "winston": "^3.17.0",
    "zarinpal-checkout-v4": "^1.3.0",
    "zod": "^3.23.8"
  }
}