{
  "name": "teleshop_backend",
  "module": "src/server.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "inspect": "bun --inspect src/server.ts",
    "start": "bun src/server.ts",
    "build": "bun build --compile --minify --sourcemap src/server.ts --outfile main",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bun src/database/migrate.ts",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio --port 9912 --verbose",
    "db:seed": "bun src/database/seed/index.ts",
    "db:backup": "bun src/cronjobs/database/backup.ts",
    "db:restore": "bun src/cronjobs/database/restore.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@faker-js/faker": "^9.0.3",
    "@types/bun": "latest",
    "drizzle-kit": "^0.26.2",
    "eslint": "^9.12.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "typescript-eslint": "^8.9.0"
  },
  "peerDependencies": {
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "drizzle-orm": "^0.35.1",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.6.5",
    "ioredis": "^5.4.1",
    "postgres": "^3.4.4",
    "zarinpal-checkout-v4": "^1.3.0",
    "zod": "^3.23.8"
  }
}